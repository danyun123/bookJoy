const fs = require("fs");
const path = require("path");

/**
 * 获取指定文件夹中所有电子书文件的URL数组
 * @param {string} folderPath 电子书文件夹路径
 * @return {string[]} 包含所有电子书文件URL的数组
 */
function getBookUrls(folderPath) {
  const epubExtensions = [".epub"]; // 支持的电子书文件扩展名
  const files = fs.readdirSync(folderPath); // 读取文件夹中所有文件

  // 过滤出所有电子书文件，并生成对应的URL
  return files.filter((file) => epubExtensions.includes(path.extname(file)))
    .map((file) => path.join(folderPath, file));

}
